            <span class="text text-danger" asp-validation-for="StudentsText"></span>

        </div>



        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="StudentCount"></label>
            <input style="border:groove 5px maroon;border-radius:10px;" type="text" class="form-control" asp-for="StudentCount" />
