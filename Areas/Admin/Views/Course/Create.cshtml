        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="TeacherName"></label>
            <input style="border:groove 5px maroon;border-radius:10px;" type="text" class="form-control" asp-for="TeacherName" />
            <span class="text text-danger" asp-validation-for="TeacherName"></span>

        </div>






       

         <div class="form-group">
            <select asp-for="CategoryId" class="form-select" aria-label="Disabled select example">
                <option>Choose CourseCategory</option>
                @foreach (var item in ViewBag.Categorys)
                {
                        <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span class="text text-danger" asp-validation-for="CategoryId"></span>
        </div>



        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="formFile">Image</label>
            <input style="border:groove 5px maroon;border-radius:10px;"  accept="image/*" type="file" class="form-control" asp-for="formFile" />
            <span class="text text-danger" asp-validation-for="formFile"></span>

        </div>
        @Html.AntiForgeryToken()
        <button style="border-radius:5px;color:black;background-color:red;width:80px;height:60px;" type="submit">Create Course</button>
        <a asp-controller="course" asp-action="Index"> <div style="width:20%;border-radius:15px;" class="btn btn-outline-success">All Courses </div></a>


    </form>
</div>
