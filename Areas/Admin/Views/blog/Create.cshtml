@model blog
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

@{
    Layout = null;
}


<div class="container">

    <form method="post" enctype="multipart/form-data">
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="Title"></label>
            <input style="border:groove 5px maroon;border-radius:10px;" type="text" class="form-control" asp-for="Title" />
            <span class="text text-danger" asp-validation-for="Title"></span>

        </div>


        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="Description"></label>
            <input style="border:groove 5px maroon;border-radius:10px;" type="text" class="form-control" asp-for="Description" />
            <span class="text text-danger" asp-validation-for="Description"></span>

        </div>

        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="Location"></label>
            <input style="border:groove 5px maroon;border-radius:10px;" type="text" class="form-control" asp-for="Location" />
            <span class="text text-danger" asp-validation-for="Location"></span>

        </div>

           <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="Price"></label>
            <input style="border:groove 5px maroon;border-radius:10px;" type="text" class="form-control" asp-for="Price" />
            <span class="text text-danger" asp-validation-for="Price"></span>

        </div>

        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="Author"></label>
            <input style="border:groove 5px maroon;border-radius:10px;" type="text" class="form-control" asp-for="Author" />
            <span class="text text-danger" asp-validation-for="Author"></span>

        </div>

        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="DateTime"></label>
            <input  style="border:groove 5px maroon;border-radius:10px;width:140px;height:40px;" type="date" class="form-control" asp-for="DateTime" />
            <span class="text text-danger" asp-validation-for="DateTime"></span>

        </div>
        


        

      

        <div class="form-group">
            <label style="color:black;font-size:18px;" asp-for="formFile"> Image</label>
            <input style="border:groove 5px maroon;border-radius:10px;" accept="image/*" type="file" class="form-control" asp-for="formFile" />
            <span class="text text-danger" asp-validation-for="formFile"></span>

        </div>
        @Html.AntiForgeryToken()
        <button style="border-radius:5px;color:black;background-color:red;width:80px;height:60px;" type="submit">Create blog</button>
        <a asp-controller="blog" asp-action="Index"> <div style="width:20%;border-radius:15px;" class="btn btn-outline-success">All Blogs</div></a>


    </form>
</div>
