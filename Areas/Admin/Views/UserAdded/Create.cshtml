@model UserCourseViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div  class="container" style="width:60%;margin-top:100px;">

    <form method="post" enctype="multipart/form-data">
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
       

        <div  class="form-group">
            <select asp-for="CourseId" class="form-select" aria-label="Disabled select example">
                <option style="font-size:23px;">Choose Course</option>
                @foreach (var item in Model.Courses)
                {
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span class="text text-danger" asp-validation-for="CourseId"></span>
        </div>


        <div class="form-group">
            <select asp-for="AppUserId" class="form-select" >
                <option style="font-size:23px;">Choose AppUser</option>
                @foreach (var item in Model.AppUsers)
                {
                    <option value="@item.Id">@item.UserName</option>
                }

            </select>
            <span class="text text-danger" asp-validation-for="AppUserId"></span>
        </div>


        @Html.AntiForgeryToken()
        <button style="border-radius:5px;color:black;background-color:red;width:80px;height:40px;" type="submit">Create</button>
        <a asp-controller="userAdded" asp-action="Create"> <div style="width:20%;border-radius:15px;border:none;" class="btn btn-outline-success">All Users And Courses </div></a>


    </form>
</div>
