



@model UserCourseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .user-list {
            width:30%;
            height: 100px;
            overflow-y: scroll;
            border: 1px solid #ccc;
            padding: 10px;
            margin-left:550px;
        }

        .user-item {
            padding: 10px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>
<body>
    <h1>User List</h1>
    <div class="user-list" style="height:400px;">
       @foreach (var item in Model.AppUsers)
        {
            <div class="user-item">
                <strong>@item.UserName:</strong>
                @foreach (var item1 in item.courses) 
                {
                    <strong>@item1.Course.Name,</strong>
                }
            </div>
        }

      
    </div>
    <a asp-controller="useradded" asp-action="create"> <div style="width:50%;margin-left:25%;border:none; " class="btn btn-outline-success">Update </div></a>
