


@model List<Event>



@*
<div class="container" style="width:400px;margin-top:80px;">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>

                    <th scope="row">@item.Id</th>
                    <th>@item.Title</th>
                    <th>@item.PhoneNumber</th>
                    <td><a asp-controller="event" asp-action="update" asp-route-id="@item.Id">UPDATE<i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a onclick="if(!confirm('Are Your Sure?')){return false;}" asp-controller="event" asp-action="remove" asp-route-id="@item.Id" class=" delete-item">SIL<i class="fas fa-trash text text-danger"></i></a></td>

                </tr>
            }

        </tbody>
    </table>
    <div>
        <a asp-controller="event" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%"> <div style="width:100%; " class="btn btn-outline-success">Blog yarat </div></a>
    </div>

</div>


